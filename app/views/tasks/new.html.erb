<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="bg-white rounded-xl shadow-sm p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">New Task</h1>

    <%= form_with model: @task do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>

        <div>
          <%= f.label :details, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :details, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>

        <div class="flex items-center">
          <%= f.check_box :completed, class: "h-4 w-4 text-blue-500 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= f.label :completed, class: "ml-2 block text-sm text-gray-700" %>
        </div>

        <div class="flex justify-end space-x-3 mt-6">
          <%= link_to "Cancel", tasks_path, class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition duration-200" %>
          <%= f.submit class: "px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition duration-200" %>
        </div>
      </div>
    <% end %>
  </div>
</div>